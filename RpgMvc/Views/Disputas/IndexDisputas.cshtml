@model IEnumerable<RpgMvc.Models.DisputaViewModel>

@if(@TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @Html.Raw(TempData["Mensagem"])
    </div>
}
@if (@TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @Html.Raw(TempData["MensagemErro"])
    </div>
}
@{ViewBag.Title = "Disputas";}
<h2>Relação de disputas</h2>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.DataDisputa)</th>
        <th>@Html.DisplayNameFor(model => model.Narracao)</th>
        <th>@Html.DisplayNameFor(model => model.Resultados)</th>
        <th></th>
        @*Loop para exibição*@
        @foreach(var item in Model)
        {
            <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.DataDisputa)</td>
            <td>@Html.DisplayFor(modelItem => item.Narracao)</td>
            <td>@Html.DisplayFor(modelItem => item.Resultados)</td>
            </tr>
        }
    </tr>
</table>
@Html.ActionLink("Apagar Disputas", "ApagarDisputas", "Disputas", null, new {@class = "btn btn-danger", onclick = "return confirm('Deseja realmente apagar as disputas?')"})
@Html.ActionLink("Clique aqui para um embate com habilidades!!!", "IndexHabilidades", "Disputas", null, new {@class = "btn btn-dark"})