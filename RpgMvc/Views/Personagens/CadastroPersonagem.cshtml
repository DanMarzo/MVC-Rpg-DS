@model RpgMvc.Models.PersonagemViewModel;

@{ViewBag.Title = "Cadastro";}
@if (@TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Mensagem"]
    </div>
}
@if (@TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]
    </div>
}
<h2>Adicionar personagem Top!</h2>
<hr>
@* Vamos a segui chamar o metodo post *@

@using (Html.BeginForm("RegistrarPersonagem", "Personagens", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal col-md-12 d-flex">

        <div class="form-group cols-md-6  ">
            <div class="row">
                @* Label Nome Personagem *@
                <label class="control-label col-md-6">
                    Nome do Personagem:
                </label>
                @* <label class="control-label col-md-2">
                        Classe do Personagem:
                    </label> *@
            </div>

            <div class="row">
                @* Input Nome personagem *@
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                </div>

            </div>
            <div class="row">
                <label class="control-label col-md-4">
                    Pontos de vida
                </label>
                <label class="control-label col-md-4">
                    Pontos de força:
                </label>
                <label class="control-label col-md-4">
                    Ponto de defesa:
                </label>
            </div>
            <div class="row">
                <div class="col-md-4">
                    @Html.EditorFor(model => model.PontosVida, new { htmlAttributes = new { @class = "form-control col-md-4", @type = "number", @placeholder = "Max = 100pts" } })
                </div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Forca, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                </div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Defesa, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                </div>
            </div>
            <div class="row">
                @* Label Força *@
                <label class="control-label col-md-4">
                    Classe:
                </label>
                <label class="control-label col-md-4">
                    Inteligência:
                </label>
            </div>
            <div class="row">
                @* Input Classe *@
                <div class="col-md-4">
                    <select class="form-control" asp-for="Classe" asp-items="Html.GetEnumSelectList<RpgMvc.Models.Enums.ClasseEnum>()"></select>
                </div>
                @* Input ponto de Inteligencia*@
                <div class="col-md-2">
                    @Html.EditorFor(model => model.Inteligencia, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                </div>
            </div>
            <br>
            <input type="submit" value="Registrar" class="btn btn-primary">
            @Html.ActionLink("Cancelar", "Index", "Home", null, new { @class = "btn btn-warning" })
        </div>

        <div class="container col-md-6">
            <a asp-action="IndexListarPersonagem" asp-controller="Personagens">Clique aqui</a>
        </div>

    </div>
}